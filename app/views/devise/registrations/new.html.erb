<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
  <%= image_tag 'icon.png', class: 'mb-4' %>
  <h2 class="h3 mb-3 fw-normal"><%= t('.sign_up') %></h2>
  <%= recaptcha_v3(action: 'signup') %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-floating">
    <%= f.text_field :sei, placeholder: 'Last Name', autofocus: true, class: 'form-control' %>
    <%= f.label :sei %>
  </div>

  <div class="form-floating">
    <%= f.text_field :mei, placeholder: 'First Name', autofocus: false, class: 'form-control' %>
    <%= f.label :mei %>
  </div>
  
  <div class="form-floating">
    <%= f.email_field :email, placeholder: 'email@example.com', autofocus: false, class: 'form-control' %>
    <%= f.label :email %>
  </div>

  <div class="form-floating">
    <%= f.password_field :password, placeholder: 'パスワード', autocomplete: "off", class: 'form-control' %>
    <%= f.label :password %>
  </div>

  <div class="form-floating">
    <%= f.password_field :password_confirmation, placeholder: 'パスワード確認', autocomplete: "off", class: 'form-control' %>
    <%= f.label :password_confirmation %>
  </div>

  <div class="actions">
    <%= f.submit t('.sign_up'), class: 'w-100 btn btn-lg btn-primary' %>
  </div>
<% end %>
<p class="mt-5 mb-3"><%= render "devise/shared/links" %></p>
